<div class="my-28 mx-12">
  <div>
    <%= render 'shared/flash_message' %>
  </div>

  <div class="flex items-center">
    <div class="text-sm font-semibold text-[#25625d] my-4 mr-4">
      連携状態のユーザー
    </div>
    <div>
      <%= link_to "招待＋",
        new_invitation_path,
        class: "text-white font-semibold bg-[#67BDB7] rounded-xl px-4 py-2 shadow-sm transition hover:opacity-95 active:scale-[0.99] focus:outline-none focus:ring-4 focus:ring-[#67BDB7]/25" %>
    </div>
  </div>

  <!-- リスト本体（カード化 & 区切り線をdivideで） -->
  <div class="my-4 overflow-hidden rounded-xl border border-gray-200 bg-white divide-y divide-gray-100">
    <% @care_relations_supporting.each do |supporting_relation| %>
      <!-- 既存の <hr> は不要になるので見た目だけ消す -->
      <hr class="hidden border-gray-100">

      <div>
        <%= link_to care_relation_path(supporting_relation.id), class: "block group" do %>
          <div class="text-sm text-[#25625d] px-4 py-2 flex items-center justify-between hover:bg-[#F3FBFA] transition">
            <% if supporting_relation.supported.name.blank? %>
              <span class="text-gray-700 text-sm">ユーザーネーム未設定</span>
            <% else %>
              <div class="font-semibold text-gray-800">
                <%= supporting_relation.supported.name %>
              </div>
            <% end %>
            <span class="text-gray-400 text-2xl group-hover:text-[#67BDB7] transition">›</span>
          </div>
        <% end %>
      </div>
    <% end %>

    <% @care_relations_supporter.each do |supporter_relation| %>
      <!-- 既存の <hr> は不要になるので見た目だけ消す -->
      <hr class="hidden border-gray-100">

      <div>
        <%= link_to care_relation_path(supporter_relation.id), class: "block group" do %>
          <div class="text-sm text-[#25625d] px-4 py-2 flex items-center justify-between hover:bg-[#F3FBFA] transition">
            <% if supporter_relation.supporter.name.blank? %>
              <span class="text-gray-700 text-sm">ユーザーネーム未設定</span>
            <% else %>
              <div class="font-semibold text-gray-800">
                <%= supporter_relation.supporter.name %>
              </div>
            <% end %>
            <span class="text-gray-400 text-2xl group-hover:text-[#67BDB7] transition">›</span>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- 末尾のhrも非表示に -->
    <hr class="hidden border-gray-100">
  </div>
</div>

<div>
  <%= render 'shared/flash_message' %>
  <div class="font-semibold text-string-base">
    今日はどんな気分？
  </div>
  <div>
    <%= form_with model: @daily_record do |f| %>
      <%= f.range_field :mood_score, in: -5..5, class: "w-full"%>
      <%= f.text_area :memo, size: "70x5", class: "w-full border border-border-base rounded-md" %>
      <%= f.submit "記録する", class: "bg-logo-color text-white font-semibold w-full py-1 rounded-md" %>
    <% end %>
  </div>
  <div>
    <%= button_to "ログアウト", destroy_user_session_path, method: :delete %> 
  </div>
</div>

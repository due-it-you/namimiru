<div class="my-28 mx-12" data-controller="daily-records--mood-score range-slider--current-mood">
  <p class="text-string-base font-semibold text-xl">項目の編集</p>
  <div class="mt-8 mb-4">
    <!-- 行動項目編集フォーム -->
    <%= render partial: "action_items/shared/form", locals: { model: @action_item }%>
  </div>
  <div class="w-1/8">
    <!-- 行動項目削除ボタン -->
    <%= link_to action_item_path(@action_item.id), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, id: "trash-icon" do %>
      <%= image_tag "trash_icon.png" %>
    <% end %>
  </div>
</div>

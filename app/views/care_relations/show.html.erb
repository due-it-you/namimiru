<div class="min-h-[calc(100vh-4rem)] bg-[#F8FAFA]">
  <div class="mx-auto max-w-xl px-5 py-12">
    <h1 class="text-md font-semibold text-[#25625d]">連携情報 詳細</h1>

    <div class="mt-6 space-y-6">
      <!-- ユーザーネーム -->
      <section>
        <h2 class="text-sm font-semibold text-[#25625d]">ユーザーネーム</h2>
        <div class="mt-2 rounded-xl border border-gray-200 bg-white">
          <div class="px-4 py-3 text-gray-800 text-sm">
            <% if @user.name.nil? %>
              ユーザーネーム未設定
            <% else %>
              <%= @user.name %>
            <% end %>
          </div>
        </div>
      </section>

      <!-- 役割 -->
      <section>
        <h2 class="text-sm font-semibold text-[#25625d]">役割</h2>
        <div class="mt-2 rounded-xl border border-gray-200 bg-white">
          <div class="px-4 py-3 text-gray-800 text-sm">
            <% if @care_relation.supported == current_user %>
              支援者
            <% else %>
              当事者
            <% end %>
          </div>
        </div>
      </section>

      <!-- 連携状態解除ボタン -->
      <section class="pt-2">
        <div class="inline-flex">
          <%= link_to care_relation_path(@care_relation.id),
            data: { turbo_method: :delete, turbo_confirm: "本当に連携を解除しますか？" },
            id: "trash-icon",
            class: "inline-flex items-center rounded-full border border-red-200 bg-red-50 p-2
                              hover:bg-red-100 transition focus:outline-none focus:ring-4 focus:ring-red-200" do %>
                              <%= image_tag "trash_icon.png", class: "h-5 w-5" %>
                            <% end %>
        </div>
      </section>
    </div>
  </div>
</div>

<div class="relative flex justify-between">
  <!-- 出来るかもリスト -->
  <div class="w-1/2 flex flex-col items-center pr-2 text-gray-700">
    <p class="text-string-base font-semibold mt-4">できるかも</p>
    <div class="mt-2  w-full" id="can-list-body">
      <!-- 差分の項目 -->
      <% @diff_can_groups.each do |tag, items| %>
        <div class="my-4 space-y-2">
          <div class="inline-block p-1 border border-gray-200 text-gray-700 ml-2 text-xs rounded-md">
            # <%= tag.name %>
          </div>
          <% items.each do |item| %>
            <div>
              <div class="p-2 mx-2 border-2 border-green-300 rounded-md text-sm text-center">
                <%= item.name%>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
      <!-- 差分ではない項目 -->
      <% @not_diff_can_groups.each do |tag, items| %>
        <div class="my-4 space-y-2">
          <!-- タグ -->
          <div class="inline-block p-1 border border-gray-200 text-gray-700 ml-2 text-xs rounded-md">
            # <%= tag.name %>
          </div>
          <% items.each do |item| %>
            <div>
              <div class="p-2 mx-2 border border-gray-300 rounded-md text-center">
                <div>
                  <!-- 項目名 -->
                  <div class="text-sm">
                    <%= item.name%>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 縦線（リストの中央のみ）-->
  <div class="absolute left-1/2 top-0 bottom-0 w-px bg-gray-200"></div>

  <!-- 出来ないかもリスト -->
  <div class="w-1/2 flex flex-col items-center pl-2 text-gray-700">
    <p class="text-string-base font-semibold mt-4">できないかも</p>
    <div class="mt-2 space-y-2 w-full" id="cannot-list-body">
      <!-- 差分の項目 -->
      <% @diff_cannot_groups.each do |tag, items| %>
        <div class="my-4 space-y-2">
          <!-- タグ -->
          <div class="inline-block p-1 border border-gray-200 text-gray-700 ml-2 text-xs rounded-md">
            # <%= tag.name %>
          </div>
          <% items.each do |item| %>
            <div>
              <div class="p-2 mx-2 border-2 border-red-300 rounded-md text-sm text-center">
                <%= item.name%>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
      <!-- 差分ではない項目 -->
      <% @not_diff_cannot_groups.each do |tag, items| %>
        <div class="my-4 space-y-2">
          <!-- タグ -->
          <div class="inline-block p-1 border border-gray-200 text-gray-700 ml-2 text-xs rounded-md">
            # <%= tag.name %>
          </div>
          <% items.each do |item| %>
            <div>
              <div class="p-2 mx-2 border border-gray-300 rounded-md text-sm text-center">
                <%= item.name%>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- やらない方がいいリスト -->
  <div class="w-1/2 flex flex-col items-center pl-2 text-gray-700">
    <p class="text-string-base font-semibold mt-4">やらない方がいい</p>
    <div class="mt-2 space-y-2 w-full" id="avoid-list-body">
      <!-- 差分の項目 -->
      <% @avoid_groups.each do |tag, items| %>
        <div class="my-4 space-y-2">
          <!-- タグ -->
          <div class="inline-block p-1 border border-gray-200 text-gray-700 ml-2 text-xs rounded-md">
            # <%= tag.name %>
          </div>
          <% items.each do |item| %>
            <div>
              <div class="p-2 mx-2 border-2 border-red-300 rounded-md text-sm text-center">
                <%= item.name%>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

</div>

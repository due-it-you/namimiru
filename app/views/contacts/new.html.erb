<div>
  <div>
    <%= render 'shared/flash_message' %>
  </div>
  <div class="text-string-base font-semibold text-xl mb-8">
    お問い合わせ 
  </div>
  <%= form_with model: @contact do |f| %> 

    <%= f.label :name, "お名前" %>
    <%= f.text_field :name, class: "border border-border-base rounded-md w-full my-2 p-2",required: true ,placeholder: "山田 太郎" %>

    <%= f.label :subject, "件名" %>
    <%= f.text_field :subject, class: "border border-border-base rounded-md w-full my-2 p-2",required: true ,placeholder: "◯◯について" %>

    <%= f.label :message, "メッセージ本文" %>
    <%= f.text_area :message, class: "border border-border-base rounded-md w-full my-2 p-2", size: "30x10", required: true %>

    <%= f.submit "送信", class: "bg-logo-color text-white w-full font-semibold rounded-md py-2 px-4 my-8" %>
  <% end %>
</div>

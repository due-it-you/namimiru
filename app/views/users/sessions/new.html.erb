<div>
  <div class="font-semibold text-xl text-center text-string-base">
    ログイン
  </div>
  <div class="mt-8">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render 'shared/flash_message' %>

      <div class="space-y-4">
        <div class="field">
          <%= f.label :email, class: "text-string-base font-semibold" %><br />
          <%= f.email_field :email, class: "w-full mt-1 px-2 py-1 border border-border-base rounded-md", autofocus: true, autocomplete: "email" %>
        </div>

        <div data-controller="password-field">
        <div class="field">
          <%= f.label :password, class: "text-string-base font-semibold" %><br />
          <%= f.password_field :password,  class: "w-full mt-1 px-2 py-1 border border-border-base rounded-md", autocomplete: "current-password", id: "user-password" %>
        </div>
        <div class="text-sm">
          <input type="checkbox" data-action="password-field#switchVisible"> パスワード表示
        </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "text-md" %>
          </div>
        <% end %>
      </div>

      <div class="actions mt-12">
        <%= f.submit "ログイン", class: "bg-logo-color text-white font-semibold w-full py-1 rounded-md" %>
      </div>
    <% end %>
  </div>

  <%= link_to "まだアカウントを持っていない方はこちら", 
    new_user_registration_path, 
    class: "text-xs text-blue-400"
  %>

  <div class="mt-8">
    <%= link_to "戻る", root_path, class: "bg-gray-500 text-white font-semibold py-2 px-4 rounded-md" %>
  </div>
</div>

<div class="my-28 mx-12">
  <h2 class="text-xl font-bold text-[#224c49] mb-6">プロフィールの編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <!-- ユーザーネーム -->
    <div class="mb-6">
      <p class="text-[#484848] font-semibold text-sm mb-1"><%= f.label :name, "ユーザーネーム" %></p>
      <%= f.text_field :name, autofocus: true,
      class: "border border-gray-300 rounded-md w-full my-2 p-2 focus:border-[#67BDB7] focus:ring-[#67BDB7]" %>
    </div>

    <!-- 更新ボタン -->
    <div class="mt-8">
      <%= f.submit "更新する",
        class: "bg-[#67BDB7] text-white w-full font-semibold rounded-md py-2 px-4 hover:opacity-95 active:scale-[0.98] transition-all" %>
    </div>
  <% end %>

  <!-- 戻るリンク -->
  <div class="mt-4 text-center">
    <%= link_to "← 戻る", :back, class: "text-[#25625d] text-sm font-semibold hover:underline" %>
  </div>
</div>

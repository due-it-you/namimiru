<div class="my-28 mx-12">
  <div>
    <%= render 'shared/flash_message' %>
  </div>

  <div class="flex justify-between items-center">
    <div class="font-semibold text-xl text-[#25625d] mr-4">
      マイページ
    </div> 
    <%= link_to "編集", edit_user_registration_path,
      class: "text-white font-medium bg-logo-color rounded-md px-4 py-1.5 shadow-sm hover:opacity-90 transition" %>
  </div>

  <div class="mt-4 mb-2 font-semibold text-md text-[#25625d]">
    ユーザーネーム 
  </div>

  <div class="border border-gray-200 bg-white rounded-md px-4 py-2 text-gray-800">
    <% if current_user.name %>
      <%= current_user.name %> 
    <% else %>
      ユーザーネーム未設定
    <% end %>
  </div>

  <div>
    <%= button_to "ログアウト", destroy_user_session_path, method: :delete,
      class: "mt-12 text-sm font-semibold text-red-500 hover:text-red-600 transition" %> 
  </div>

  <div>
    <div class="mt-12 mb-2 font-semibold text-md text-[#25625d]">
      その他
    </div>
    <div>
      <%= link_to "利用規約", terms_of_service_path,
        class: "text-sm text-gray-600 hover:text-[#25625d] transition" %>
    </div>
    <div>
      <%= link_to "プライバシーポリシー", privacy_policy_path,
        class: "text-sm text-gray-600 hover:text-[#25625d] transition" %>
    </div>
    <div>
      <%= link_to "お問い合わせ", new_contact_path,
        class: "text-sm text-gray-600 hover:text-[#25625d] transition" %>
    </div>
  </div>
</div>

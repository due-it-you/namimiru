<% if daily_record.user_uuid == current_user.uuid %>
  <!-- リンク付きカード -->
  <%= link_to user_daily_record_path(user.uuid, daily_record.id), class: "block group" do %>
    <%= render "daily_records/shared/card_body", user: user, daily_record: daily_record %>
  <% end %>
<% else %>
  <%= render "daily_records/shared/card_body", user: user, daily_record: daily_record %>
<% end %>

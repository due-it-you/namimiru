<div class="mx-4" data-controller="action-items--lists">
  <div>
    <%= render 'shared/flash_message' %>
  </div>
  <!-- 気分 -->
  <div class="mt-8">
    <p class="text-string-base text-md font-semibold mt-2 flex justify-center">気分</p>
    <p class="text-string-base text-2xl font-semibold mt-2 flex justify-center">0</p>
    <div class="flex justify-center my-4">
      <input type="range" min="-5" max="5" value="<%= @mood_score %>" data-action="action-items--lists#update" class="w-full mx-4 mb-4">  
    </div>
  </div>
  <hr class="text-gray-300" />

  <!-- リスト -->
  <%= turbo_frame_tag "action_items_list", data: { "action-items--lists-target": "listsFrame" } do %>
    <div class="relative flex justify-between">
      <!-- 出来るかもリスト -->
      <div class="w-1/2 flex flex-col items-center pr-2">
        <p class="text-string-base font-semibold mt-4">できるかも</p>
        <div class="mt-2 space-y-2 w-full">
          <% @can_list.each do |can_item| %>
            <div class="p-2 mx-2 border border-gray-300 rounded-lg text-center">
              <%= can_item.name%>
            </div>
          <% end %>
        </div>
      </div>

      <!-- 縦線（リストの中央のみ）-->
      <div class="absolute left-1/2 top-0 bottom-0 w-px bg-gray-300"></div>

      <!-- 出来ないかもリスト -->
      <div class="w-1/2 flex flex-col items-center pl-2">
        <p class="text-string-base font-semibold mt-4">できないかも</p>
        <div class="mt-2 space-y-2 w-full">
          <% @cannot_list.each do |cannot_item| %>
            <div class="p-2 mx-2 border border-gray-300 rounded-lg text-center">
              <%= cannot_item.name%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <%= link_to new_action_item_path do %>
    <div class="fixed bottom-20 right-4 z-50">
      <button class="rounded-full px-5 py-3 bg-gray-900 text-white shadow-lg">
        ＋ 追加
      </button>
    </div>
  <% end %>
</div>

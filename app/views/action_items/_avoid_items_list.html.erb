<!-- 差分の項目 -->
<% avoid_groups.each do |tag, items| %>
  <div class="my-4 space-y-2">
    <!-- タグ -->
    <div class="inline-block p-1 border border-gray-200 text-gray-700 ml-2 text-xs rounded-md">
      # <%= tag.name %>
    </div>
    <% items.each do |item| %>
      <div>
        <div class="p-2 mx-2 border-2 border-red-300 rounded-md text-sm text-center">
          <%= item.name%>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
